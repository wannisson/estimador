<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="wannisson">
        <createTable tableName="tb_estimador_premissa">
            <column name="id_estimador" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="id_premissa" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="wannisson">
        <addForeignKeyConstraint baseColumnNames="id_premissa"
                                 baseTableName="tb_estimador_premissa" constraintName="fk_estimador_premissa"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="tb_premissa" />

        <addForeignKeyConstraint baseColumnNames="id_estimador"
                                 baseTableName="tb_estimador_premissa" constraintName="fk_premissa_estimador"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="tb_estimador" />
    </changeSet>

    <changeSet id="3" author="wannisson">
        <insert tableName="tb_estimador_premissa">
            <column name="id_premissa" value="1" />
            <column name="id_estimador" value="1" />
        </insert>
    </changeSet>


</databaseChangeLog>